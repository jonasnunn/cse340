<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form id="addInvForm" action="/inv/delete" method="post">
  
  <label for="inv_make">Make:</label>
  <input
  id="inv_make"
  type="text"
  name="inv_make"
  required
  pattern="^[A-Za-z]+$"
  value="<%= locals.inv_make %>"
  readonly
  />
  
  <label for="inv_model">Model:</label>
  <input
  id="inv_model"
  type="text"
  name="inv_model"
  required
    pattern="^[A-Za-z]+$"
    value="<%= locals.inv_model %>"
    readonly
    />
    
    <label for="inv_year">Year:</label>
    <input
    id="inv_year"
    type="text"
    name="inv_year"
    required
    pattern="^[0-9]{4}$"
    value="<%= locals.inv_year %>"
    readonly
    />
    
    <label for="inv_price">Price:</label>
    <input
    id="inv_price"
    type="text"
    name="inv_price"
    required
    pattern="^[0-9]+$"
    value="<%= locals.inv_price %>"
    readonly
    />
    
    <p>Confirm Deletion - The delete is permanent.</p>
    <button id="invSubmit" type="submit">Delete</button>
    
    <input type="hidden" name="inv_id"
<% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
<% } %>>
  </form>
  
