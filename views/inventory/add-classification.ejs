<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
      res.redirect('/') 
  } %> 

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<%#- addClassView %>

<form id="addClassForm" action="/inv/addclass" method="post">
  <label for="classification_name">Classification:</label>
  <span>No spaces or special characters.</span>
  <input id="classification_name" type="text" name="classification_name" required pattern="[A-Za-z]+">

  <input id="classSubmitButton"  type="submit" value="Add Classification">
</form>
